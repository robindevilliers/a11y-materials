<email defnVersion="v1" id="reset-password" version="1">
    <div v="v1" orientation="COLUMN">
        <div v="v1" orientation="ROW" justifyContent="SPACE_AROUND">
            <div v="v1" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="CENTER">
                <title size="LARGE" v="v1">You have requested a password reset.</title>
                <paragraph v="v1">
                    Your username is <script v="v1" script="%profile% .username"/>
                </paragraph>
                <paragraph v="v1">
                    Please click on this <password-reset-link v="v1" label="link"/> to complete a password reset.
                </paragraph>
            </div>
        </div>
    </div>
</email>
