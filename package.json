{
  "name": "materials-toolkit",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf dist www",
    "compile": "webpack --config webpack.config.cjs",
    "test": "jest",
    "lint": "eslint --ext js,ts lib/",
    "css:scss": "node-sass --output-style compressed -o www/public/css test/scss",
    "css:autoprefixer": "postcss -u autoprefixer -r www/public/css/*.css",
    "css:lint": "stylelint test/scss/*.scss  --custom-syntax postcss-scss",
    "build:compile": "npm run compile",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer; copyfiles -u 3 www/public/css/main.css test/public/css/",
    "build:js": "webpack --config webpack.test.config.cjs --mode=production; copyfiles -u 3 www/public/js/main.js test/public/js/",
    "build:images": "imagemin test/public/img/**/* --out-dir=www/public/img",
    "build:fonts": "copyfiles -u 2 test/public/fonts/* www/public/fonts/; copyfiles -u 4 node_modules/bootstrap-icons/font/fonts/* www/public/fonts/;",
    "build:html": "node --enable-source-maps ./dist/materials-toolkit.js --dir ./test --output ./www",
    "build": "run-s build:*",
    "watch:compile": "onchange \"lib\" -- npm run compile",
    "watch:css": "onchange \"test/scss\" -- npm run build:css",
    "watch:images": "onchange \"test/public/img\" -- npm run build:images",
    "watch:html": "onchange \"dist/materials-toolkit.js\" \"./test/pages\" \"./test/partials\" -- node ./dist/materials-toolkit.js --dir ./test --output ./www",
    "watch:serve": "ws --directory www  --static.index main.html",
    "watch": "npm run build && run-p watch:*",
    "watch:js": "onchange \"test/public/js\" -- webpack --config webpack.test.config.js --mode=development"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "bootstrap": "^4.6.2",
    "bootstrap-icons": "^1.10.3",
    "browser-sync": "^2.29.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.9.0",
    "eslint": "^8.47.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.1",
    "file-loader": "^6.2.0",
    "html-format": "^1.1.6",
    "htmlnano": "^2.0.3",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.7.0",
    "jquery": "^3.6.4",
    "live-server": "^1.2.2",
    "local-web-server": "^5.3.3",
    "node-sass": "^8.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "popper.js": "^1.16.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.6",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-extend": "^0.6.5",
    "posthtml-modules": "^0.9.1",
    "purgecss": "^5.0.0",
    "sass-loader": "^14.0.0",
    "style-loader": "^3.3.4",
    "stylelint": "^14.16.1",
    "stylelint-config-twbs-bootstrap": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "commander": "^7.2.0"
  }
}
