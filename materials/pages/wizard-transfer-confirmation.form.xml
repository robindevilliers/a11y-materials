<?schema version="2"?>
<form id="transfer-confirmation-form" title="Confirm Transfer" orientation="COLUMN" v="v1" defnVersion="v1">
    <title size="LARGE" v="v1">
        <textual>Confirm Transfer</textual>
    </title>
    <paragraph v="v1">
        <textual>
            This action will transfer the message to a different queue. Do you wish to proceed?
        </textual>
    </paragraph>
    <div v="v1">
        <cancel-button id="cancel-button" size="MEDIUM" buttonFlavour="DEFAULT" required="false"
            margin="0.25em 1em" v="v1">
            <textual>Cancel</textual>
        </cancel-button>
        <accept-button id="accept-button" size="MEDIUM" buttonFlavour="DANGER" required="false"
            margin="0.25em 1em" v="v1">
            <textual>Accept</textual>
        </accept-button>
    </div>
</form>