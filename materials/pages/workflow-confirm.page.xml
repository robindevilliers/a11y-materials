<?schema version="2"?>
<page defnVersion="v1" id="intro" title="Confirm Workflow" orientation="COLUMN">
    <title size="LARGE" v="v1">
        <textual>Confirm Workflow</textual>
    </title>
    <paragraph v="v1">
        <textual>
            You are about to execute the <script v="v1" script=".title"/>. Are you sure
            you wish to proceed?
        </textual>
    </paragraph>

    <div justifyContent="CENTER" v="v1">
        <paragraph paragraphStyle="PLAIN" v="v1">
            <textual>
                <script v="v1" script=".description"/>
            </textual>
        </paragraph>
    </div>
    <div justifyContent="END" v="v1">
        <accept-button id="accept-button" buttonFlavour="PRIMARY" margin="0.25em 0.5em" v="v1">
            <textual>Confirm</textual>
        </accept-button>
        <cancel-button id="cancel-button" buttonFlavour="DEFAULT" margin="0.25em 0.5em" v="v1">
            <textual>Cancel</textual>
        </cancel-button>
    </div>
</page>