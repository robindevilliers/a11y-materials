<?schema version="2"?>
<email defnVersion="v1" id="test-email" version="1">
    <div v="v1" orientation="COLUMN">
        <div v="v1" orientation="ROW" justifyContent="SPACE_AROUND">
            <div v="v1" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="START">
                <title size="LARGE" v="v1">
                    <textual>Test Email</textual>
                </title>
                <text v="v1">
                    <textual>
                        This is a test email. The following paragraph will contain the phrase sent during the test
                        request.
                    </textual>
                </text>
                <text v="v1">
                    <textual>
                        <script v="v1" script="%phrase%"/>
                    </textual>
                </text>
            </div>
        </div>
    </div>
</email>