<?schema version="2"?>
<email defnVersion="v1" id="reset-password" version="1">
    <div v="v1" orientation="COLUMN">
        <div v="v1" orientation="ROW" justifyContent="SPACE_AROUND">
            <div v="v1" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="START">
                <title size="LARGE" v="v1">
                    <textual>You have requested a password reset</textual>
                </title>
                <text v="v1">
                    <textual>Your username is <script v="v1" script="%profile% .username"/>.</textual>
                </text>
                <text v="v1">
                    <textual>
                        Please click on the link to complete a password reset.
                    </textual>
                </text>
                <password-reset-link v="v1">
                    <textual>Reset</textual>
                </password-reset-link>
            </div>
        </div>
    </div>
</email>
