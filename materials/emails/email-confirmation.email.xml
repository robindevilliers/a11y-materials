<?schema version="2"?>
<email defnVersion="v1" id="email-confirmation" version="1">
    <div v="v1" orientation="COLUMN">
        <div v="v1" orientation="ROW" justifyContent="SPACE_AROUND">
            <div v="v1" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="START">
                <title size="LARGE" v="v1">
                    <textual>Email Confirmation</textual>
                </title>
                <text v="v1">
                    <textual> Hello <script v="v1" script="%profile% .title"/> <script v="v1" script="%profile% .firstName"/> <script v="v1" script="%profile% .lastName"/>.</textual>
                </text>
                <text v="v1">
                    <textual>
                        Please click on the link below to complete your registration.
                    </textual>
                </text>
                <email-confirmation-link v="v1">
                    <textual>Confirm</textual>
                </email-confirmation-link>
            </div>
        </div>
    </div>
</email>
